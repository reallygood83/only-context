{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["bun-types"],
    "lib": ["ESNext"],
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*", "hooks/**/*"],
  "exclude": ["node_modules", "dist"]
}
